extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='book') Book:
      select#book.form-control(name='book', required)
        option(value='') --Please select a book--
        each bk in books
          if bookinstance && bk._id.toString() === bookinstance.book._id.toString()
            option(value=bk._id selected)= bk.title
          else
            option(value=bk._id)= bk.title

    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(
        type='text',
        name='imprint',
        required,
        value=(bookinstance ? bookinstance.imprint : '')
      )

    div.form-group
      label(for='due_back') Due back:
      input#due_back.form-control(
        type='date',
        name='due_back',
        value=(bookinstance && bookinstance.due_back 
          ? bookinstance.due_back.toISOString().substring(0,10)
          : '')
      )

    div.form-group
      label(for='status') Status:
      select#status.form-control(name='status')
        each status in ["Available", "Maintenance", "Loaned", "Reserved"]
          if bookinstance && status === bookinstance.status
            option(value=status selected)= status
          else
            option(value=status)= status

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      each error in errors
        li!= error.msg
