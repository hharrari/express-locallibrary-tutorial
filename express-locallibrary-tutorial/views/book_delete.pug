extends layout

block content
  h1 Delete Book: #{book.title}

  if book_instances.length
    p
      strong Cannot delete this book because it has the following copies:
    div(style='margin-left:20px;margin-top:20px')
      each instance in book_instances
        p #{instance._id} - #{instance.status} 
  else
    p Do you really want to delete this book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id)

      button.btn.btn-danger(type='submit') Delete
