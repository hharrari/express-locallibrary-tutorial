extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Genre name:
      input#name.form-control(type='text', name='name', required value=(genre ? genre.name : ''))

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      each error in errors
        li!= error.msg
